import java.util.Scanner;

public class Ex5_InputFromConsole {
	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in) ;
		
		//Q1.
		 System.out.println("Moi ban nhap vao 3 so nguyen duong ");
		 for (int i=1; i<=3; i++) {
			 int x= scanner.nextInt();
			 System.out.println("Ban da nhap: " + x + "\n");}
			 
		//Q2.
			 System.out.println("Moi ban nhap vao 2 so thuc");
			 for (int i1=1;i1<=2;i1++) {
				double d1 = scanner.nextDouble();
				System.out.println("Ban da nhap: " + d1 + "\n");}
				
		//Q3.
				
				System.out.println("Moi ban nhap vao ho");
				String s1 = scanner.next();
				System.out.println("Moi ban nhap vao ten");
				String s2 = scanner.next();
				System.out.println("Ten ban da nhap: "+s1 + " " +s2 +"\n");		
				
		 }
		 
		
	//Q5. 
	
	
	

	public static void inputAccount(String[] args) {
		Scanner scanner = new Scanner(System.in) ;
		for (;;) {
		System.out.println("Moi ban nhap thong tin account");
		System.out.println("Moi ban nhap ID");
		int id = scanner.nextInt();
		System.out.println("Moi ban nhap email");
		String email = scanner.next();
		System.out.println("Moi ban nhap username");
		String userName = scanner.next();
		System.out.println("Moi ban nhap fullname");
		String fullName = scanner.next();
		System.out.println("Moi ban nhap department");
		String department = scanner.next();
		System.out.println("Moi ban nhap Position");
		int position = scanner.nextInt(5);
		System.out.println("Moi ban nhap Group");
		String group = scanner.next();
		System.out.println("Moi ban nhap JoinDate");
		String joinDate = scanner.next();
		}
	
	}
	
	
